rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and update their own profile, but cannot delete it.
    // New users can create their own profile document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Generic rule for user-specific collections (appointments, vitals, etc.)
    // Allows a user to do anything with a document if their UID matches the document's `userId` field.
    match /{collection}/{docId} {
      allow read, write: if request.auth.uid == request.resource.data.userId || request.auth.uid == resource.data.userId;
    }
  }
}
