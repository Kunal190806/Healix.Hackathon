rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can create their own user document, and read/update their own document.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId;
    }

    function isOwner(collectionName) {
      return get(/databases/$(database)/documents/$(collectionName)/$(request.resource.data.id)).data.userId == request.auth.uid
    }
    
    // Users can manage their own data in these collections
    match /(appointments|vitals|prescriptions|journalEntries|hearingTestHistory|eyeTestHistory|responseTimeHistory)/{docId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
