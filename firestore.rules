rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read and update their own profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if request.auth.uid != null;
    }

    // Rules for user-specific collections
    match /{collection}/{docId} {
      // Users can read/write/delete their own documents in these collections.
      // List queries are allowed only if filtered by userId.
      allow read, write, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow list: if request.auth.uid != null && request.query.get("userId") == request.auth.uid;
    }
  }
}
