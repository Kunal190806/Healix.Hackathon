rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can manage their own profile
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Secure all other collections by userId
    match /appointments/{docId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /eyeTestHistory/{docId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /hearingTestHistory/{docId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /journalEntries/{docId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /prescriptions/{docId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /responseTimeHistory/{docId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /vitals/{docId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}